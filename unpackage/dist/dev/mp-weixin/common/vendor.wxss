.c-book-title {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-left: 40rpx;
  border-left: 12rpx solid #ffab18;
  overflow: hidden;
}
.c-book-title .title {
  float: left;
  font-size: 32rpx;
}
.c-book-title .label {
  display: inline-block;
  width: 52rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: white;
  text-align: center;
  background: #53ac7d;
  font-size: 24rpx;
  margin-left: 16rpx;
}
.c-book-title .active {
  color: #528ae8;
}
.c-book-title .tab {
  float: right;
  font-size: 26rpx;
  margin-right: 20rpx;
}
.c-book-title .tab .tab-t {
  padding: 20rpx 20rpx;
}

.c-book-more {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}
.c-book-more .btn {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  background: white;
  font-size: 24rpx;
}

.c-scroll {
  height: 100vh;
}
.c-scroll .scroll-lower {
  height: 100rpx;
  text-align: center;
  overflow: hidden;
  margin-top: -20rpx;
}
.c-scroll .scroll-lower .loading {
  width: 200rpx;
  height: 120rpx;
}
.c-scroll .scroll-lower .txt {
  width: 200rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 30rpx;
}

.block-box-a {
  padding-bottom: 30rpx;
  overflow: hidden;
}
.block-box-a .box {
  width: 250rpx;
  float: left;
  text-align: center;
  margin-top: 30rpx;
}
.block-box-a .img {
  width: 230rpx;
  height: 330rpx;
}
.block-box-a .txt {
  padding: 0 20rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  display: block;
  word-break: keep-all;
  white-space: nowrap;
  overflow: hidden;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
}

.c-book-infoline {
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  overflow: hidden;
}
.c-book-infoline .right {
  padding-left: 30rpx;
  width: 470rpx;
  float: left;
}
.c-book-infoline .img {
  float: left;
  width: 180rpx;
  height: 240rpx;
}
.c-book-infoline .h3 {
  line-height: 52rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.c-book-infoline .label {
  color: rgba(0, 0, 0, 0.7);
  line-height: 20rpx;
  font-size: 28rpx;
}
.c-book-infoline .p {
  overflow: hidden;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
  height: 80rpx;
  line-height: 40rpx;
  color: rgba(0, 0, 0, 0.6);
}
.c-book-infoline .ul {
  max-height: 120rpx;
  overflow: hidden;
}
.c-book-infoline .ul .li {
  margin-top: 12rpx;
  display: inline-block;
  padding: 4rpx 12rpx;
  border: #53ac7d 1rpx solid;
  color: #53ac7d;
  font-size: 24rpx;
  margin-right: 12rpx;
  border-radius: 4rpx;
}


.content {
	text-align: center;
	height: 400rpx;
}
.logo {
	height: 200rpx;
	width: 200rpx;
	margin-top: 200rpx;
}
.title {
	font-size: 36rpx;
	color: #8f8f94;
}

